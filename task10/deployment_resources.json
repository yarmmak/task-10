{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "dynamodb:GetRecords",
            "dynamodb:GetShardIterator",
            "dynamodb:DescribeStream",
            "dynamodb:ListStreams",
            "dynamodb:UpdateItem",
            "dynamodb:Scan",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "cognito-idp:SignUp",
            "cognito-idp:AdminCreateUser",
            "cognito-idp:AdminSetUserPassword",
            "cognito-idp:ListUserPools",
            "cognito-idp:AdminRespondToAuthChallenge",
            "cognito-idp:AdminUpdateUserAttributes",
            "cognito-idp:ListUserPoolClients",
            "cognito-idp:ListUsers",
            "cognito-idp:AdminUpdateUserAttributes",
            "cognito-idp:AdminInitiateAuth",
            "cognito-idp:AdminConfirmSignUp"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy"
  },
  "api_handler-role": {
    "predefined_policies": [],
    "principal_service": "lambda",
    "custom_policies": [
      "lambda-basic-execution"
    ],
    "resource_type": "iam_role",
    "allowed_accounts": [
      "${account_id}"
    ]
  },
  "Tables": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "N",
    "read_capacity": 1,
    "write_capacity": 1,
    "global_indexes": [],
    "autoscaling": []
  },
  "Reservations": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "S",
    "read_capacity": 1,
    "write_capacity": 1,
    "global_indexes": [],
    "autoscaling": []
  },
  "simple-booking-userpool": {
    "resource_type": "cognito_idp",
    "region": "eu-central-1",
    "password_policy": {
      "minimum_length": 12,
      "require_symbols": false
    },
    "auto_verified_attributes": [],
    "sms_configuration": {},
    "username_attributes": [],
    "custom_attributes": [
      {
        "name": "customer",
        "type": "String"
      },
      {
        "name": "latest_login",
        "type": "String"
      }
    ],
    "client": {
      "client_name": "test_userpool",
      "generate_secret": false,
      "explicit_auth_flows": [
        "ALLOW_ADMIN_USER_PASSWORD_AUTH",
        "ALLOW_CUSTOM_AUTH",
        "ALLOW_USER_SRP_AUTH",
        "ALLOW_REFRESH_TOKEN_AUTH"
      ]
    }
  },
  "task10_api": {
    "resource_type": "api_gateway",
    "deploy_stage": "api",
    "authorizers": {
      "authorizer": {
        "type": "COGNITO_USER_POOLS",
        "identity_source": "method.request.header.Authorization",
        "user_pools": [
          "simple-booking-userpool"
        ],
        "ttl": 600
      }
    },
    "dependencies": [
      {
        "resource_name": "api_handler",
        "resource_type": "lambda"
      }
    ],
    "resources": {
      "/signup": {
        "POST": {
          "authorization_type": "NONE",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        }
      },
      "/signin": {
        "POST": {
          "authorization_type": "NONE",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        }
      },
      "/tables": {
        "GET": {
          "authorization_type": "authorizer",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        },
        "POST": {
          "authorization_type": "authorizer",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        }
      },
      "/tables/{tableId}": {
        "GET": {
          "authorization_type": "authorizer",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        }
      },
      "/reservations": {
        "GET": {
          "authorization_type": "authorizer",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        },
        "POST": {
          "authorization_type": "authorizer",
          "lambda_name": "api_handler",
          "integration_type": "lambda",
          "enable_proxy": true
        }
      }
    }
  }
}